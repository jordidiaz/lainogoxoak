.header

  img
    max-width 100%

  .container
    margin-top -160px !important

  @media (max-width: 320px)
    img
      margin-top 10%
      max-width 99%

  @media (min-width: 321px) and (max-width: 567px)
    img
      margin-top 8%
      max-width 99%

  @media (min-width: 568px) and (max-width: 767px)
    img
      max-width 80%

  @media (min-width: 768px)
    img
      max-width 80%

  @media (min-width: 992px)
    img
      max-width 70%

  @media (min-width: 1200px)
    img
      margin-top -5%
      max-width 70%